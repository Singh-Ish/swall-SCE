<Window x:Class="Prototype1.Client"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        Title="Coordinate Mapping"
        Closing="Window_Closing"
        mc:Ignorable="d"
        d:DesignWidth="{DynamicResource {x:Static SystemParameters.PrimaryScreenWidthKey}}" 
        d:DesignHeight="{DynamicResource {x:Static SystemParameters.PrimaryScreenHeightKey}}" 
        WindowStyle = "None" Topmost="True" Foreground="#00000000"
        AllowsTransparency="True" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Window.Background>
        <SolidColorBrush Opacity="0.0" Color="White"/>
    </Window.Background>
    <Grid Margin="0">
        <Image Width="Auto" Stretch="UniformToFill" Name="camera" HorizontalAlignment="Center"/>
    </Grid>
</Window>
